ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/logging/include/Ishiko/Logging.bkl;
import $(ishikopath)/tests/include/Ishiko/Tests/Core.bkl;

toolsets = gnu vs2019 vs2017 vs2015 vs2013;

gnu.makefile = ../gnumake/GNUmakefile;
vs2019.solutionfile = ../vc16/IshikoLoggingTests.sln;
vs2017.solutionfile = ../vc15/IshikoLoggingTests.sln;
vs2015.solutionfile = ../vc14/IshikoLoggingTests.sln;
vs2013.solutionfile = ../vc12/IshikoLoggingTests.sln;

program IshikoLoggingTests : IshikoLogging, IshikoTestsCore
{
    archs = x86 x86_64;

    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += IshikoLogging IshikoTestsCore IshikoProcess IshikoErrors boost_filesystem boost_system;
    }

    headers
    {
        ../../src/LoggerTests.h
        ../../src/LoggingMacrosTests.h
    }

    sources
    {
        ../../src/LoggerTests.cpp
        ../../src/LoggingMacrosTests.cpp
        ../../src/main.cpp
    }
}
